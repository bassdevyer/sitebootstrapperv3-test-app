- content_for :body_title do
  Edit #{resource_name.to_s.humanize}

-# Body
.container
  .row.adform
    .col-md-1
    .col-md-10
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true }) do |f|

        .form-group
          = devise_error_messages!
        .form-group
          %label{for: "user_email"} Email
          = f.text_field :email, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Email", autofocus: true
          %br/
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div Currently waiting confirmation for: #{resource.unconfirmed_email}
        .form-group
          %label{for: "user_first_name"} First Name
          = f.text_field :first_name, size: '150', maxlenght: '150', class: 'form-control', placeholder: "First Name"

        .form-group
          %label{for: "user_last_name"} Last Name
          = f.text_field :last_name, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Last Name"

        .form-group
          %label{for: "user_photo"} Photo
          = f.file_field :photo, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Photo"

        .form-group
          %label{for: "user_password"} Password
          = f.password_field :password, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Password"

        .form-group
          %label{for: "user_password_confirmation"} Password Confirmation
          = f.password_field :password_confirmation, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Password Confirmation"

        .form-group
          %label{for: "user_current_password"} Current Password
          %i (we need your current password to confirm your changes)
          = f.password_field :current_password, size: '150', maxlenght: '150', class: 'form-control', placeholder: "Current Password"

        .form-group
          %button.btn.btn-primary{:type => 'submit'}
            Update
            %i.glyphicon.glyphicon-log-in

    .col-md-1

  .row
    .col-md-1
    .col-md-10
      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
      = link_to "Back", :back
    .col-md-1

